pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    // 定义 GitHub 凭据 ID
                    def gitCredentials = '2'
                    
                    // 使用凭据拉取代码
                    git credentialsId: gitCredentials, url: 'https://github.com/zhangodd/test.git', branch: 'dev'
                }
            }
        }
        stage('Build') {
            steps {
                // 在这里执行构建步骤，例如 Maven 构建
                sh 'mvn clean package'
            }
        }
    }
}
